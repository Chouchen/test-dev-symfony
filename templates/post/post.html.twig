{% extends 'base.html.twig' %}

{% block title %}{{ post.title }} - Post{% endblock %}

{% block body %}
    <article id="main">
        <header>
            <h2>{{ post.title }}</h2>
        </header>
        <section class="wrapper style5">
            <div class="inner">
                {{ post.content }}
            </div>
        </section>
    </article>

    <form class = "comments container">
        <h2>les commentaires</h2>
        {{ form(commentaire)}}
    </form>
       
{% endblock %}
